{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "skipLibCheck": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "es6"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}